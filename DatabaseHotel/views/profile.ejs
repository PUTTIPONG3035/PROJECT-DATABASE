<!DOCTYPE html>
<html class="no-js" lang="zxx">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>Booking Hotel</title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="shortcut icon" type="image/x-icon" href="/images/favicon.svg" />

    <!-- ========================= CSS here ========================= -->
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/LineIcons.2.0.css" />
    <link rel="stylesheet" href="/css/animate.css" />
    <link rel="stylesheet" href="/css/tiny-slider.css" />
    <link rel="stylesheet" href="/css/glightbox.min.css" />
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>

</head>

<body>

    <div id="profile">


        <!--[if lte IE 9]>
      <p class="browserupgrade">
        You are using an <strong>outdated</strong> browser. Please
        <a href="https://browsehappy.com/">upgrade your browser</a> to improve
        your experience and security.
      </p>
    <![endif]-->

        <!-- Preloader -->
        <div class="preloader">
            <div class="preloader-inner">
                <div class="preloader-icon">
                    <span></span>
                    <span></span>
                </div>
            </div>
        </div>
        <!-- /End Preloader -->

        <!-- Start Header Area -->
        <header class="header navbar-area">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-12">
                        <div class="nav-inner">
                            <!-- Start Navbar -->
                            <nav class="navbar navbar-expand-lg">
                                <a class="navbar-brand" href="/" style="color:white">
                                    <b style="font-size: larger;"> Hotel </b>
                                    <!-- <img src="assets/images/logo/white-logo.svg" alt="Logo"> -->
                                </a>
                                <button class="navbar-toggler mobile-menu-btn" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="toggler-icon"></span>
                                    <span class="toggler-icon"></span>
                                    <span class="toggler-icon"></span>
                                </button>
                                <div class="collapse navbar-collapse sub-menu-bar" id="navbarSupportedContent">
                                    <ul id="nav" class="navbar-nav ms-auto">
                                        <li class="nav-item">
                                            <a href="/" class="page-scroll active"
                                                aria-label="Toggle navigation">Home</a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="#booking" class="page-scroll"
                                                aria-label="Toggle navigation">Booking</a>
                                        </li>
                                    </ul>
                                </div> <!-- navbar collapse -->

                                <div class="bg-light rounded-pill text-center"
                                    style="padding : 20px; color: rgb(232, 136, 152)">
                                    <i class="fa-solid fa-user"></i>
                                    {{bookings[0].first_name + ' ' + bookings[0].last_name}}
                                </div>
                                <div class="button add-list-button">
                                    <a @click="logOut()" class="btn">Log-out</a>
                                </div>
                            </nav>
                            <!-- End Navbar -->
                        </div>
                    </div>
                </div> <!-- row -->
            </div> <!-- container -->
        </header>
        <!-- End Header Area -->

        <!-- Start Hero Area -->
        <section id="home" class="hero-area">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-5 col-md-12 col-12">
                        <div class="hero-content">
                            <h1 class="wow fadeInLeft" data-wow-delay=".4s">Welcome</h1>
                            <p class="wow fadeInLeft" data-wow-delay=".6s">
                            </p>
                        </div>
                    </div>
                    <div class="col-lg-7 col-md-12 col-12">
                        <div class="hero-image wow fadeInRight" data-wow-delay=".4s">
                            <img src="https://q-xx.bstatic.com/xdata/images/hotel/max1024x768/184305239.jpg?k=4dbc2549dfba179004f2acdacceb65c7fb501f88823274ceb8397bde485209b7&o="
                                alt="#">
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- End Hero Area -->

        <!-- Start Pricing Table Area -->
        <section id="booking" class="pricing-table section">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="section-title">
                            <h3 class="wow zoomIn" data-wow-delay=".2s">Our Room</h3>
                            <h2 class="wow fadeInUp" data-wow-delay=".4s">information's room</h2>
                            <p class="wow fadeInUp" data-wow-delay=".6s">{{yesbooking}}
                            </p>
                        </div>
                    </div>
                </div>
                <div class="row" v-if="yesbooking == 'check'">
                    <div class="col-lg-3 col-md-6 col-12" v-for="booking in bookings">
                        <!-- Single Table -->
                        <div class="single-table wow fadeInUp" data-wow-delay=".2s">
                            <!-- Table Head -->
                            <div class="table-head">
                                <h4 class="title">{{booking.room_type}}</h4>
                                <p>{{booking.room_description}}</p>
                                <div class="price">
                                    <h2 class="amount">THB {{booking.price}}<span class="duration">/day</span></h2>
                                </div>

                                <div class="bg-success rounded-pill text-center"
                                    v-if="booking.payment_state == 'complete'">
                                    <a class="btn text-light ">Complete</a>
                                </div>
                                <div class="bg-danger rounded-pill text-center"
                                    v-if="booking.payment_state == 'incomplete'">
                                    <a href="" class="btn text-light ">Incomplete</a>
                                </div>
                            </div>
                            <div class="table-content">
                                <h4 class="middle-title">Service</h4>
                                <ul class="table-list">
                                    <!-- loop facility -->
                                    <div v-if="booking.room_service.length == 15">
                                        <li><i class="lni lni-checkmark-circle"></i>
                                            {{booking.room_service.split(",")[0]}}
                                        </li>
                                        <li><i class="lni lni-checkmark-circle"></i>
                                            {{booking.room_service.split(",")[1]}}
                                        </li>
                                    </div>
                                    <div v-else>
                                        <li><i class="lni lni-checkmark-circle"></i>
                                            {{booking.room_service.split(",")[0]}}
                                        </li>
                                    </div>
                                </ul>
                            </div>
                            <div class="table-content">
                                <h4 class="middle-title">Date</h4>

                                <!-- loop facility -->
                                <p class="title">Check IN : {{booking.check_in.split('T')[0]}} </p>
                                <p>Check OUT : {{booking.check_out.split('T')[0]}} </p>
                            </div>
                            <div class="table-content  text-center">
                                <hr>

                                <button class="btn btn-danger" @click="cancel(booking.booking_id, booking.customer_id)">
                                    cancel </button>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>


        <!-- Start Footer Area -->
        <footer class="footer">
            <!-- Start Footer Top -->
            <div class="footer-top">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-4 col-md-4 col-12">
                            <!-- Single Widget -->
                            <div class="single-footer f-about">
                                <p>Alway make you happy by providing the best option for you</p>
                                <ul class="social">
                                    <li><a href="javascript:void(0)"><i class="lni lni-facebook-filled"></i></a></li>
                                    <li><a href="javascript:void(0)"><i class="lni lni-twitter-original"></i></a></li>
                                    <li><a href="javascript:void(0)"><i class="lni lni-instagram"></i></a></li>
                                    <li><a href="javascript:void(0)"><i class="lni lni-linkedin-original"></i></a></li>
                                    <li><a href="javascript:void(0)"><i class="lni lni-youtube"></i></a></li>
                                    <li><a href="javascript:void(0)"><i class="lni lni-pinterest"></i></a></li>
                                </ul>
                                <!-- <p class="copyright-text">Designed and Developed by <a href="https://uideck.com/"
                                    rel="nofollow" target="_blank">UIdeck</a>
                            </p> -->
                            </div>
                            <!-- End Single Widget -->
                        </div>

                    </div>
                </div>
            </div>
            <!--/ End Footer Top -->
        </footer>
        <!--/ End Footer Area -->

        <!-- ========================= scroll-top ========================= -->
        <a href="#" class="scroll-top">
            <i class="lni lni-chevron-up"></i>
        </a>
    </div>

    <!-- ========================= JS here ========================= -->
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/wow.min.js"></script>
    <script src="/js/tiny-slider.js"></script>
    <script src="/js/glightbox.min.js"></script>
    <script src="/js/count-up.min.js"></script>
    <script src="/js/main.js"></script>
    <script type="text/javascript">

        //====== counter up
        var cu = new counterUp({
            start: 0,
            duration: 2000,
            intvalues: true,
            interval: 100,
            append: " ",
        });
        cu.start();

        var app = new Vue({
            el: '#profile',
            data: {
                bookings: JSON.parse('<%- booking %>'),
                yesbooking: JSON.parse('<%- yesbooking %>')
            },
            methods: {
                logOut() {
                    localStorage.removeItem('user')
                    window.location.href = 'http://localhost:3000/';

                },
                cancel(bookingId, customerId) {
                    if (confirm('cancel' + bookingId) == true) {
                        window.location.href = `http://localhost:3000/profile/delete/${bookingId} ${customerId}`
                    }
                }
            }
        })
    </script>
</body>

</html>