    <script type="text/javascript">

        //====== counter up
        var cu = new counterUp({
            start: 0,
            duration: 2000,
            intvalues: true,
            interval: 100,
            append: " ",
        });
        cu.start();

        var app = new Vue({
            el: '#home',
            data: {
                allroom: JSON.parse('<%- rooms %>'),
                is_ActiveLogin: true,
                is_ActiveLogout: false,
                is_AcitveAdmin: true,
                is_AcitveSignUp: true,
                is_ActiveAdmin: false,
                is_ActiveProfile : false,
                local: '',

            },


            created() {
                // console.log(JSON.parse(localStorage.getItem('user'))[0].id)
                if (localStorage.getItem('user') != null) {

                    let id = JSON.parse(localStorage.getItem('user'))[0].id;
                    if (id < 100) {
                        this.is_ActiveAdmin = true
                        this.is_ActiveLogout = true
                        this.is_AcitveAdmin = false
                        this.is_AcitveSignUp = false
                        this.is_ActiveLogin = false
                        this.local =JSON.parse(localStorage.getItem('user'))[0].id
                    }

                    else {
                        this.is_ActiveProfile = true
                        this.is_ActiveLogin = false
                        this.is_ActiveLogout = true
                        this.is_AcitveAdmin = false
                        this.is_AcitveSignUp = false
                        this.local = JSON.parse(localStorage.getItem('user'))[0].id
                    }
                }
            },
            methods: {
                logOut() {
                    localStorage.removeItem('user')
                    window.location.href = 'http://localhost:3000/';

                },
                booking(roomId){

                    if(localStorage.getItem('user') != null){
                        let id = JSON.parse(localStorage.getItem('user'))[0].id;
                        if(id < 100){
                            window.location.href = 'http://localhost:3000/login'
                        }
                        else{
                            window.location.href = `http://localhost:3000/booking/${roomId}`
                        }
                    }
                    else{
                        window.location.href = 'http://localhost:3000/login'
                    }
                }
            }
        })
    </script>
